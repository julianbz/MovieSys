  body.hold-transition.skin-red.sidebar-mini
    .wrapper
      header.main-header
        a.logo href="index2.html"
          span.logo-mini
            b Mv
            | Sy
          span.logo-lg
            b Movies
            | Sys

        nav.navbar.navbar-static-top
          ul.nav.navbar-nav
            li.dropdown.notifications-menu
              a  href="/" All movies
            li.dropdown.notifications-menu
              a  href="/lasts_movies" Lasts movies
            li.dropdown.notifications-menu
              a  href="/lasts_comments" Lasts comments

      aside.main-sidebar
        section.sidebar

          ul.sidebar-menu data-widget="tree"
            li.header
              h4
                p
                  | CATEGORIES
                  a.i.fa.fa-plus.pull-right href="/category_new"
            - @categories.to_a.each do |category|
              li
                a href="/category/#{category.id}"
                  i.fa.fa-film
                  span = category.name


      .content-wrapper
        /! Content Header (Page header)
        section.content-header
          h1
            | Add new movie to #{@category.name} category


        section.content
          .row
            .col-md-6
              .box.box-primary.box-danger
                .box-body
                  form action="/category/#{@category.id}/movie_new" method="post"
                    label.form-group Name
                    input.form-control[placeholder=("Enter movie name") name="name" type="text"]
                    br
                    label.form-group Year
                    input.form-control[placeholder=("Enter year") name="year" type="text"]
                    br
                    label.form-group Director
                    input.form-control[placeholder=("Enter director name") name="director" type="text"]
                    br
                    label.form-group Description
                    input.form-control[placeholder=("Enter description") name="description" type="text"]
                    br
                    label.form-group Image URL
                    input.form-control[placeholder=("Enter image URL") name="image" type="text"]
                    br
                    input.btn.btn-success.btn-block[type="submit" value="Add"]


    footer.main-footer
      .pull-right.hidden-xs
        b Version
        | 1.0
      strong
        | Copyright Â© 2017-2018
