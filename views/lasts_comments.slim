  body.hold-transition.skin-red.sidebar-mini
    .wrapper
      header.main-header
        a.logo href="index2.html"
          span.logo-mini
            b Mv
            | Sy
          span.logo-lg
            b Movies
            | Sys

        nav.navbar.navbar-static-top
          ul.nav.navbar-nav
            li.dropdown.notifications-menu
              a  href="/" All movies
            li.dropdown.notifications-menu
              a  href="/lasts_movies" Lasts movies
            li.dropdown.notifications-menu
              a  href="/lasts_comments" Lasts comments

      aside.main-sidebar
        section.sidebar

          ul.sidebar-menu data-widget="tree"
            li.header
              h4
                p
                  | CATEGORIES
                  a.i.fa.fa-plus.pull-right href="/category_new"
            - @categories.to_a.each do |category|
              li
                a href="/category/#{category.id}"
                  i.fa.fa-film
                  span = category.name

      .content-wrapper style="min-height: 558px;height: 900px;"
        section.content-header
          h1
            | Lasts comments
        br
        .col-md-9
          .nav-tabs-custom
            .tab-content
              #activity.tab-pane

              #timeline.tab-pane.active
                ul.timeline.timeline-inverse
                  br
                  - @lasts_comments.to_a.each do |comment|
                    li
                      i.fa.fa-comment.bg-blue
                      .timeline-item
                        span.time
                          i.fa.fa-clock-o
                          | #{comment.created_at}
                        h3.timeline-header.no-border
                          row
                            p style="color:#3c8dbc;" #{comment.name} commented:

                          pre #{comment.comment}
                          p.pull-left style="color:grey" On "#{comment.movie.name}" movie
                          a style="color:grey" href="/category/#{comment.movie.category.id}/movie/#{comment.movie.id}#comments"
                            span.pull-right  See comment
                          br
                  br
                  li
                    i.fa.fa-clock-o.bg-gray

